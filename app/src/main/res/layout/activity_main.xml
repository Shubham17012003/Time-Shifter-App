<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#5BBCE8"
    android:padding="16dp">

    <!-- TextView for title -->
    <TextView
        android:id="@+id/title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Time Zone Converter"
        android:textSize="20sp"
        android:textStyle="bold"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="20dp"/>

    <!-- Spinner for selecting source time zone -->
    <Spinner
        android:id="@+id/spinnerSourceTimeZone"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/title"
        android:layout_marginBottom="20dp"/>

    <!-- Spinner for selecting destination time zone -->
    <Spinner
        android:id="@+id/spinnerDestTimeZone"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/spinnerSourceTimeZone"
        android:layout_marginBottom="20dp"/>

    <!-- Button to convert time -->
    <Button
        android:id="@+id/btnConvert"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Convert Time"
        android:layout_below="@id/spinnerDestTimeZone"/>

    <!-- TextView for displaying the converted time -->
    <TextView
        android:id="@+id/convertedTime"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Converted Time: "
        android:textSize="18sp"
        android:layout_below="@id/btnConvert"
        android:layout_marginTop="20dp"/>
</RelativeLayout>
